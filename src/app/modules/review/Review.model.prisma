model Review {
  id          String  @id @default(uuid())
  reviewer_id String?
  user_id     String?

  rating      Float    @default(5.0)
  comment     String   @default("")
  reviewed_at DateTime @default(now())
  last_edited DateTime @updatedAt
  is_deleted  Boolean  @default(false)

  ref_parcel_id String?
  ref_trip_id   String?

  reviewer User? @relation("ReviewerReviews", fields: [reviewer_id], references: [id], onDelete: SetNull)
  user     User? @relation("UserReviews", fields: [user_id], references: [id], onDelete: SetNull)

  @@index([user_id])
  @@index([reviewer_id])
  @@map("reviews")
}
